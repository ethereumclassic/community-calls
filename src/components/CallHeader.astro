---
import type { Call } from "../lib/types";
import { Icon } from "astro-icon/components";
import TimezoneBar from "./TimezoneBar";
import GreenRoom from "./GreenRoom.astro";
import UpcomingBadge from "./UpcomingBadge.astro";
import { formatFullDate } from "../lib/dates";

interface Props {
  call: Call;
}

const { call } = Astro.props;

const callNumber = call.data.callNumber!;
const isUpcoming = call.data.isUpcoming;
---

<header class="mb-10">
  <!-- Status badge -->
  <div class="flex items-center gap-3 mb-4 h-[26px]">
    {
      call.data.youtube ? (
        <span class="inline-flex items-center gap-2 px-4 py-1.5 text-xs font-mono uppercase tracking-widest text-etc-green/80 border border-etc-green/20 rounded-full">
          <span class="w-2 h-2 rounded-full bg-etc-green animate-pulse-glow" />
          Recorded
        </span>
      ) : (
        isUpcoming &&
        call.data.eventDateTime && (
          <UpcomingBadge eventDateTime={call.data.eventDateTime} />
        )
      )
    }
  </div>

  <!-- Title -->
  {
    callNumber !== 0 && (
      <p class="text-lg font-mono text-gray-400 mb-4">
        Ethereum Classic Community Call #{callNumber}
      </p>
    )
  }
  <h1 class="font-display text-5xl md:text-6xl text-white mb-4">
    {call.data.description}
  </h1>
  <!-- Meta info -->
  <div class="text-sm md:text-lg font-mono text-gray-400">
    {call.data.date && formatFullDate(call.data.date)}
    {call.data.date && call.data.location && ", "}
    {call.data.location}
  </div>

  <!-- Timezone Display -->
  {call.data.time && <TimezoneBar client:load time={call.data.time} />}

  <!-- Join Call Button & Green Room (only for upcoming calls with both) -->
  {
    isUpcoming &&
    call.data.joinLink && !call.data.youtube && call.data.greenRoom && (
      <div class="mt-6 flex flex-col md:flex-row md:items-center gap-4">
        <a
          href={call.data.joinLink}
          target="_blank"
          rel="noopener noreferrer"
          class="flex md:inline-flex items-center justify-center gap-3 px-6 py-3 bg-etc-green text-void font-mono text-sm font-semibold uppercase tracking-wider rounded-lg hover:bg-etc-green/90 transition-colors whitespace-nowrap"
        >
          <Icon name="lucide:video" class="icon-sm" />
          Join Call
        </a>
        <GreenRoom
          time={call.data.greenRoom.time}
          location={call.data.greenRoom.location}
          joinLink={call.data.greenRoom.joinLink}
        />
      </div>
    )
  }
</header>
