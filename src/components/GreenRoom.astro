---
interface Props {
  time: string;
  location: string;
  joinLink?: string;
}

const { time, location, joinLink } = Astro.props;
---

<div class="flex items-center gap-4 px-4 py-3 bg-etc-green/5 border border-etc-green/20 rounded-lg">
  <div class="flex items-center gap-2 text-etc-green/80 shrink-0">
    <span class="w-2 h-2 rounded-full bg-etc-green animate-pulse"></span>
    <span class="text-[10px] font-mono uppercase tracking-wider">Green Room</span>
  </div>
  <p class="flex-1 text-sm text-gray-400">
    Join us at <span class="text-gray-300">{time}</span> in <span class="text-gray-300">{location}</span> for an unrecorded pre-call hangout.
  </p>
  {joinLink && (
    <a
      href={joinLink}
      target="_blank"
      rel="noopener noreferrer"
      class="shrink-0 px-3 py-1 text-xs font-mono text-etc-green border border-etc-green/30 rounded hover:bg-etc-green/10 transition-colors"
    >
      Join
    </a>
  )}
</div>
