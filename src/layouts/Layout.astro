---
import { ViewTransitions } from 'astro:transitions';
import '../styles/index.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import SubscribeModal from '../components/SubscribeModal.astro';
import { siteConfig } from '../lib/config';

// Fontsource imports - fonts are bundled locally for better performance
import '@fontsource-variable/jetbrains-mono';
import '@fontsource/instrument-serif/400.css';
import '@fontsource/instrument-serif/400-italic.css';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  ogType?: 'website' | 'article';
  publishedTime?: string;
}

const {
  title,
  description = siteConfig.description,
  ogImage,
  ogType = 'website',
  publishedTime,
} = Astro.props;

const canonicalUrl = new URL(Astro.url.pathname, siteConfig.url).href;
const ogImageUrl = ogImage || `${siteConfig.url}${siteConfig.assets.ogImage}`;

// JSON-LD structured data
const jsonLd = {
  "@context": "https://schema.org",
  "@type": ogType === 'article' ? "Event" : "WebSite",
  name: title,
  description: description,
  url: canonicalUrl,
  ...(ogType === 'website' && {
    publisher: {
      "@type": "Organization",
      name: siteConfig.name,
      logo: {
        "@type": "ImageObject",
        url: `${siteConfig.url}${siteConfig.assets.logo}`
      }
    }
  }),
  ...(ogType === 'article' && publishedTime && {
    startDate: publishedTime,
    organizer: {
      "@type": "Organization",
      name: "Ethereum Classic Community"
    },
    eventAttendanceMode: "https://schema.org/OnlineEventAttendanceMode",
    eventStatus: "https://schema.org/EventScheduled"
  })
};
---

<!doctype html>
<html lang="en" data-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#0a0a0c" />
    <meta name="color-scheme" content="dark" />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalUrl} />

    <!-- Favicons -->
    <link rel="icon" type="image/svg+xml" href="/etc-logo.svg" />
    <link rel="apple-touch-icon" href="/etc-logo.svg" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={ogType === 'article' ? 'article' : 'website'} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:site_name" content={siteConfig.name} />
    <meta property="og:locale" content="en_US" />
    {publishedTime && <meta property="article:published_time" content={publishedTime} />}

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalUrl} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={ogImageUrl} />

    <!-- RSS Feed -->
    <link rel="alternate" type="application/rss+xml" title={`${siteConfig.name} RSS Feed`} href={siteConfig.rssUrl} />

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />

    <ViewTransitions />
  </head>
  <body class="min-h-screen flex flex-col">
    <!-- Ambient glow effects -->
    <div class="fixed inset-0 pointer-events-none z-0 overflow-hidden">
      <!-- Top left glow -->
      <div class="absolute -top-40 -left-40 w-96 h-96 bg-etc-green/5 rounded-full blur-[120px]"></div>
      <!-- Bottom right glow -->
      <div class="absolute -bottom-40 -right-40 w-96 h-96 bg-etc-green/5 rounded-full blur-[120px]"></div>
    </div>

    <Header />
    <main class="flex-1 relative z-10">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <slot />
      </div>
    </main>
    <Footer />

    <!-- Global Subscribe Modal -->
    <SubscribeModal modalId="subscribe-modal-global" />
  </body>
</html>
