---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import CallCard from '../components/CallCard.astro';

const allCalls = await getCollection('calls');
const now = Date.now();

// Filter out addendum files and sort by date (newest first)
const filteredCalls = allCalls
  .filter(call => !call.id.includes('addendum') && !call.id.includes('recurring'))
  .sort((a, b) => {
    const dateA = a.data.date ? new Date(a.data.date).getTime() : 0;
    const dateB = b.data.date ? new Date(b.data.date).getTime() : 0;
    return dateB - dateA;
  });

// Separate upcoming and past calls
const upcomingCalls = filteredCalls.filter(call => call.data.date && call.data.date.getTime() > now);
const pastCalls = filteredCalls.filter(call => !call.data.date || call.data.date.getTime() <= now);

// Get the next upcoming call (soonest)
const nextCall = upcomingCalls.length > 0
  ? upcomingCalls.sort((a, b) => (a.data.date?.getTime() || 0) - (b.data.date?.getTime() || 0))[0]
  : null;

// Helper to extract call number from filename (fallback)
const getCallNumberFromFilename = (id: string) => {
  const match = id.match(/_(\d+)\.md$/);
  return match ? parseInt(match[1], 10) : 0;
};

// Get call number from frontmatter or filename
const getCallNumber = (call: typeof filteredCalls[0]) => {
  if (call.data.number) return call.data.number;
  return getCallNumberFromFilename(call.id);
};

// Generate slug from call data
const getSlug = (call: typeof filteredCalls[0]) => {
  const date = call.data.date;
  const num = getCallNumber(call);
  const desc = call.data.description;

  if (date && desc) {
    const dateStr = date.toISOString().split('T')[0];
    const slugDesc = desc.toLowerCase().replace(/[^a-z0-9]+/g, '-').replace(/(^-|-$)/g, '');
    return `${dateStr}-${num}-${slugDesc}`;
  }

  // Fallback to filename without extension
  return call.id.replace('.md', '');
};

// Format date for upcoming call
const formatFullDate = (d: Date) => {
  return d.toLocaleDateString('en-US', {
    weekday: 'long',
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
};

// Stats
const totalCalls = filteredCalls.length;
const recordedCalls = filteredCalls.filter(c => c.data.youtube).length;
---

<Layout title="ETC Community Calls">
  <!-- Hero Section -->
  <section class="relative min-h-[70vh] flex items-center justify-center -mt-8 mb-16">
    <!-- Decorative elements -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <!-- Circuit lines -->
      <svg class="absolute top-0 left-0 w-full h-full opacity-[0.03]" viewBox="0 0 100 100" preserveAspectRatio="none">
        <path d="M0,50 L30,50 L35,30 L65,30 L70,50 L100,50" stroke="currentColor" stroke-width="0.2" fill="none" class="text-etc-green"/>
        <path d="M0,70 L20,70 L25,60 L45,60 L50,70 L100,70" stroke="currentColor" stroke-width="0.2" fill="none" class="text-etc-green"/>
      </svg>
    </div>

    <div class="relative z-10 text-center max-w-4xl mx-auto px-4">
      <!-- Logo with glow -->
      <div class="relative inline-block mb-8 animate-float">
        <img
          src="/etc-logo.svg"
          alt="ETC Community Calls"
          class="w-28 h-28 md:w-36 md:h-36 mx-auto animate-pulse-glow"
        />
        <div class="absolute inset-0 bg-etc-green/20 rounded-full blur-2xl scale-150"></div>
      </div>

      <!-- Terminal-style header -->
      <div class="mb-6 opacity-0 animate-fade-in-up" style="animation-delay: 100ms">
        <span class="inline-block px-3 py-1 text-[10px] font-mono uppercase tracking-[0.3em] text-etc-green/80 border border-etc-green/20 rounded-full">
          Ethereum Classic
        </span>
      </div>

      <!-- Main title -->
      <h1 class="font-display text-5xl md:text-7xl lg:text-8xl text-gray-100 mb-6 opacity-0 animate-fade-in-up whitespace-nowrap" style="animation-delay: 200ms">
        Community <span class="text-glow">Calls</span>
      </h1>

      <!-- Subtitle -->
      <p class="text-lg md:text-xl font-mono text-gray-400 max-w-2xl mx-auto mb-10 opacity-0 animate-fade-in-up" style="animation-delay: 300ms">
        Regular open discussions about development,
        <span class="text-etc-green/80">ECIPs</span>, and the future of
        <span class="text-etc-green/80">Ethereum Classic</span>
      </p>

      <!-- CTA Buttons -->
      <div class="flex flex-wrap gap-4 justify-center opacity-0 animate-fade-in-up" style="animation-delay: 400ms">
        <a
          href="https://ethereumclassic.org/discord"
          target="_blank"
          rel="noopener noreferrer"
          class="btn-etc px-8 py-3 rounded-lg inline-flex items-center gap-2"
        >
          <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
            <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028 14.09 14.09 0 0 0 1.226-1.994.076.076 0 0 0-.041-.106 13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.956-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.955-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.946 2.418-2.157 2.418z"/>
          </svg>
          Join Discord
        </a>
        <a
          href="https://www.youtube.com/@ETCCommunityCalls"
          target="_blank"
          rel="noopener noreferrer"
          class="btn-etc-outline px-8 py-3 rounded-lg inline-flex items-center gap-2"
        >
          <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
            <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
          </svg>
          Watch Recordings
        </a>
      </div>

      <!-- Stats -->
      <div class="flex justify-center gap-12 mt-12 opacity-0 animate-fade-in-up" style="animation-delay: 500ms">
        <div class="text-center">
          <div class="text-3xl md:text-4xl font-display text-etc-green">{totalCalls}</div>
          <div class="text-xs font-mono uppercase tracking-wider text-gray-500 mt-1">Total Calls</div>
        </div>
        <div class="w-px bg-etc-green/20"></div>
        <div class="text-center">
          <div class="text-3xl md:text-4xl font-display text-etc-green">{recordedCalls}</div>
          <div class="text-xs font-mono uppercase tracking-wider text-gray-500 mt-1">Recordings</div>
        </div>
      </div>
    </div>

  </section>

  <!-- About Section -->
  <section class="mb-16 opacity-0 animate-fade-in-up" style="animation-delay: 200ms">
    <div class="terminal-card rounded-xl overflow-hidden">
      <!-- Terminal header -->
      <div class="flex items-center gap-2 px-4 py-3 bg-surface-elevated/50 border-b border-etc-green/10">
        <span class="w-3 h-3 rounded-full bg-red-500/60"></span>
        <span class="w-3 h-3 rounded-full bg-amber/60"></span>
        <span class="w-3 h-3 rounded-full bg-etc-green/60"></span>
        <span class="ml-4 text-xs font-mono text-gray-500">about.md</span>
      </div>

      <div class="p-6 md:p-8">
        <div class="grid md:grid-cols-2 gap-8">
          <div>
            <h2 class="font-display text-2xl text-gray-100 mb-4">
              <span class="text-etc-green/60">#</span> What are Community Calls?
            </h2>
            <p class="font-mono text-sm text-gray-400 leading-relaxed">
              ETC Community Calls are open voice discussions where anyone can join
              to discuss Ethereum Classic development, proposals (ECIPs), ecosystem
              updates, and more. These calls provide a platform for community members,
              developers, and enthusiasts to connect and collaborate.
            </p>
          </div>
          <div>
            <h2 class="font-display text-2xl text-gray-100 mb-4">
              <span class="text-etc-green/60">#</span> How to Join
            </h2>
            <ul class="font-mono text-sm text-gray-400 space-y-2">
              <li class="flex items-start gap-2">
                <span class="text-etc-green mt-1">→</span>
                <span>Calls are typically held on <span class="text-gray-300">Zoom</span> or <span class="text-gray-300">Discord</span></span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-etc-green mt-1">→</span>
                <span>Check the latest call page for join links</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-etc-green mt-1">→</span>
                <span>Pre-call "Green Room" hangouts on Discord</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-etc-green mt-1">→</span>
                <span>Recordings published on YouTube</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Upcoming Call Hero -->
  {nextCall && (
    <section class="mb-16">
      <a
        href={`/calls/${getSlug(nextCall)}`}
        class="block terminal-card rounded-xl overflow-hidden border-2 border-amber/30 hover:border-amber/50 transition-all duration-300 group"
      >
        <!-- Header bar -->
        <div class="flex items-center justify-between px-6 py-4 bg-amber/10 border-b border-amber/20">
          <div class="flex items-center gap-3">
            <span class="relative flex h-3 w-3">
              <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-amber opacity-75"></span>
              <span class="relative inline-flex rounded-full h-3 w-3 bg-amber"></span>
            </span>
            <span class="text-xs font-mono uppercase tracking-widest text-amber">Upcoming Call</span>
          </div>
          <span class="px-3 py-1 text-xs font-mono uppercase tracking-wider bg-amber/20 text-amber rounded-full">
            #{getCallNumber(nextCall)}
          </span>
        </div>

        <!-- Content -->
        <div class="p-6 md:p-8">
          <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-6">
            <div class="flex-1">
              <h2 class="font-display text-3xl md:text-4xl text-gray-100 group-hover:text-amber transition-colors mb-3">
                {nextCall.data.description || 'Community Call'}
              </h2>
              <div class="flex flex-wrap items-center gap-4 text-sm font-mono text-gray-400">
                {nextCall.data.date && (
                  <span class="flex items-center gap-2">
                    <svg class="w-4 h-4 text-amber/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                    {formatFullDate(nextCall.data.date)}
                  </span>
                )}
                {nextCall.data.time && (
                  <span class="flex items-center gap-2">
                    <svg class="w-4 h-4 text-amber/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    {nextCall.data.time}
                  </span>
                )}
                {nextCall.data.location && (
                  <span class="flex items-center gap-2">
                    <svg class="w-4 h-4 text-amber/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                    </svg>
                    {nextCall.data.location}
                  </span>
                )}
              </div>
            </div>
            <div class="flex-shrink-0">
              <span class="inline-flex items-center gap-2 px-6 py-3 bg-amber text-void font-mono text-sm font-semibold uppercase tracking-wider rounded-lg group-hover:bg-amber/90 transition-colors">
                View Details
                <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </span>
            </div>
          </div>
        </div>
      </a>
    </section>
  )}

  <!-- Calls Archive -->
  <section>
    <div class="flex items-center justify-between mb-8">
      <h2 class="font-display text-3xl text-gray-100">
        <span class="text-etc-green/60">//</span> Archive
      </h2>
      <span class="text-xs font-mono text-gray-500 uppercase tracking-wider">
        {pastCalls.length} calls
      </span>
    </div>

    <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
      {pastCalls.map((call, index) => (
        <CallCard
          number={getCallNumber(call)}
          description={call.data.description}
          date={call.data.date}
          slug={getSlug(call)}
          youtube={call.data.youtube}
          index={index}
        />
      ))}
    </div>
  </section>
</Layout>
